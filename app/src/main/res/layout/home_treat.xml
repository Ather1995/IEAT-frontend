<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/treat_tubiao" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/treat_qingke"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_yongcan"/>
            <TextView
                android:id="@+id/renshu"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:text="0"
                android:gravity="center"
                />
            <ImageButton
                android:id="@+id/renshu_minus"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_jian"/>
            <ImageButton
                android:id="@+id/renshu_plus"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_jia"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/treat_hengxian"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_caishi"/>
            <TextView
                android:id="@+id/caishu"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:text="0"
                android:gravity="center"
                />
            <ImageButton
                android:id="@+id/caishu_minus"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_jian"/>
            <ImageButton
                android:id="@+id/caishu_plus"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_jia"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_jikou"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_la"/>
            <ImageButton
                android:id="@+id/la"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_kuang"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_ku"/>
            <ImageButton
                android:id="@+id/ku"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_kuang"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_haixian"/>
            <ImageButton
                android:id="@+id/haixian"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_kuang"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_hunshi"/>
            <ImageButton
                android:id="@+id/hunshi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_kuang"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="13dp"
                android:layout_marginLeft="105dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_guwu"/>
            <ImageButton
                android:id="@+id/guwu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_kuang"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_zhurou"/>
            <ImageButton
                android:id="@+id/zhurou"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_kuang"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="13dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_qita"/>
            <EditText
                android:id="@+id/jikou_qita"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/treat_dakuang"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/treat_hengxian"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_teshu"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_laoren"/>
                <ImageButton
                    android:id="@+id/laoren"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_kuang"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_ertong"/>
                <ImageButton
                    android:id="@+id/ertong"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_kuang"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_tangniao"/>
                <ImageButton
                    android:id="@+id/tangniao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_kuang"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="110dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_gaoxueya"/>
                <ImageButton
                    android:id="@+id/gaoxueya"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_kuang"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/treat_qita"/>
                <EditText
                    android:id="@+id/teshu_qita"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/treat_dakuang"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/treat_hengxian"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/tuijian"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/treat_press"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>