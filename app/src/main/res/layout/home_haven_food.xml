<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcf4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/home_havenfood"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1" />



            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1" />
        </LinearLayout>
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="已经购买了食材"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="点击进行智能配菜"
            />
        <Button
            android:id="@+id/click"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="点击配菜"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/type_se_bt_selector"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="添加食材+"
        android:textSize="18dp"
        android:textColor="#78979f"
        android:layout_marginTop="10dp"
        android:id="@+id/add"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/food1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:visibility="visible"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/food2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/food3"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/food4"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/food5"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>


    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:id="@+id/mat_recView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>-->


</LinearLayout>